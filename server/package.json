{
  "name": "iwc-learning-platform-server",
  "version": "1.0.0",
  "description": "Backend server for the IWC Learning Platform - A Language Learning Management System",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "migrate": "ts-node src/db/migrate.ts",
    "seed": "ts-node src/db/seed.ts",
    "db:setup": "ts-node src/scripts/setupDb.ts",
    "db:reset": "cross-env NODE_ENV=development ts-node src/db/migrate.ts",
    "db:reset:win": "set NODE_ENV=development && ts-node src/db/migrate.ts"
  },
  "keywords": [
    "language-learning",
    "education",
    "typescript",
    "express",
    "postgresql"
  ],
  "author": "IWC",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/pg": "^8.11.11",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "iwc-education-platform-server": "file:",
    "iwc-learning-platform-server": "file:",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.4",
    "@types/uuid": "^9.0.9",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.20.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
